{
  "name": "k6-core",
  "version": "1.0.0",
  "description": "K6 Central Load Testing Framework - TypeScript Edition",
  "main": "dist/main.js",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=dist/main.js --platform=neutral --format=esm",
    "build:watch": "esbuild src/main.ts --bundle --outfile=dist/main.js --platform=neutral --format=esm --watch",
    "test:sample": "npm run build && k6 run dist/main.js",
    "test:sample:vus": "npm run build && k6 run --vus 10 --duration 30s dist/main.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "k6",
    "load-testing",
    "performance",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/k6": "^0.49.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  }
}

